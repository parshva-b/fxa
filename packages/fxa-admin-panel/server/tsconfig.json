{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2018", "ESNext.AsyncIterable"],
    "sourceMap": true,
    "outDir": "../build",
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["../types", "node_modules/@types"]
  },
  "include": ["."]
}
